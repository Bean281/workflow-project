<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SetTimer</servlet-name>
        <servlet-class>CountdownTimer.SetTimer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TodoListServlet</servlet-name>
        <servlet-class>CountdownTimer.TodoListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SigninServlet</servlet-name>
        <servlet-class>Servlet.SigninServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>Servlet.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditNoteServlet</servlet-name>
        <servlet-class>Servlet.EditNoteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TodoListServletCustomClock</servlet-name>
        <servlet-class>CountdownTimer.TodoListServletCustomClock</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetTimer</servlet-name>
        <url-pattern>/SetTimer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TodoListServlet</servlet-name>
        <url-pattern>/TodoListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditNoteServlet</servlet-name>
        <url-pattern>/EditNoteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SigninServlet</servlet-name>
        <url-pattern>/SigninServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TodoListServletCustomClock</servlet-name>
        <url-pattern>/TodoListServletCustomClock</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
</web-app>
